<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/black"
        android:id="@+id/tvGame"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_x"
        android:textColor="@color/black"
        android:id="@+id/tvTurn"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nought"
        android:textColor="@color/black"
        android:id="@+id/tvNougth"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTurn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cross"
        android:textColor="@color/black"
        android:id="@+id/tvCross"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNougth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/llBox"
        android:padding="@dimen/margin_10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            style="@style/row">

            <Button
                android:id="@+id/a1"
                style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/a2"
                style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/a3"
                style="@style/colomn" />

        </LinearLayout>

        <View
            style="@style/horizontalLine"/>

        <LinearLayout
            style="@style/row">

            <Button
                android:id="@+id/b1"
               style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/b2"
                style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/b3"
                style="@style/colomn" />

        </LinearLayout>
        <View
            style="@style/horizontalLine"/>

        <LinearLayout
            style="@style/row">

            <Button
                android:id="@+id/c1"
               style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/c2"
                style="@style/colomn" />
            <View
                style="@style/verticalLine"/>

            <Button
                android:id="@+id/c3"
                style="@style/colomn" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@id/llBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>